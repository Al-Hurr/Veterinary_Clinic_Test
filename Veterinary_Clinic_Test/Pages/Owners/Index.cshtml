@page
@model Veterinary_Clinic_Test.Pages.Owners.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info text-black-50">Список хозяинов</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="/Owners/Create">Добавить хозяина</a>
    </div>
    <div class="col-12 border mt-3 p-3">
        <form method="post">
            @if (Model.Owners.Any())
            {
                <table class="table table-striped table-bordered border">
                    <tr class="table-secondary thead-dark">
                        <th>
                            <label asp-for="@Model.Owners.FirstOrDefault().FullName"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Owners.FirstOrDefault().Adress"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Owners.FirstOrDefault().Phone"></label>
                        </th>
                        <th class="w-25"></th>
                    </tr>
                    @foreach (var item in Model.Owners)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Adress)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Phone)
                            </td>
                            <td style="text-align:center;">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Изменить</a>
                                <button onclick="return confirm('Вы хотите удалить строку?')" asp-route-id="@item.Id"
                                        asp-page-handler="Delete" class="btn btn-danger btn-sm">
                                    Удалить
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Список пуст</p>
            }
        </form>
    </div>
</div>